# Logrotate configuration for standard log files
# {{ ansible_managed }}

/var/log/kern.log
/var/log/daemon.log
/var/log/haproxy.log
/var/log/auth.log
/var/log/cron.log
/var/log/mail.log
/var/log/boot.log
/var/log/system.log
{
	rotate {{ logrotate_keepcount }}
	{{ logrotate_interval }}
	missingok
	notifempty
	compress
	delaycompress
	sharedscripts
	postrotate
        /usr/lib/rsyslog/rsyslog-rotate &>/dev/null
	endscript
}
